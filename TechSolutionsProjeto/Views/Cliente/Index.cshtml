@model IEnumerable<TechSolutions.Web.Models.Cliente>

<h2>Clientes</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Data de Cadastro</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Email</td>
                <td>@cliente.DataCadastro.ToShortDateString()</td>
                <td>
                    <a href="/Cliente/Detalhes/@cliente.Id">Detalhes</a> |
                    <a href="/Cliente/Editar/@cliente.Id">Editar</a> |
                    <a href="/Cliente/Deletar/@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Cliente/CriarCliente" class="btn btn-primary">Adicionar Cliente</a>
